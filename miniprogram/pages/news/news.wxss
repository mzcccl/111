page {
  background-color: rgb(245, 245, 245);
}
.search {
  position: relative;
  padding: 10px 0px;
  display: flex;
  justify-content: center;
  background-color: rgb(0, 88, 146);
}
.search view{
  width: 90%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 5px 10px;
  background-color: #ffffff;
  border-radius: 25px;
}
.search view image{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.search view input {
  width: calc(100% - 30px);
}
.content {
  box-sizing: border-box;
  padding: 10px 25px 0px 8px;
  margin-top: 5px;
  background-color: #fff;
  height: calc(100vh - 58px);
}