<!--miniprogram/custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <view class="tab-bar-border"></view>
  <view class="tab-bar-item" data-path="{{list[0].pagePath}}" data-index="{{0}}" bindtap="switchTab">
    <image src="{{selected === 0 ? list[0].selectedIconPath : list[0].iconPath}}"></image>
    <view>{{list[0].text}}</view>

  </view>
  <view class="tab-bar-item" data-path="{{list[1].pagePath}}" data-index="{{1}}" bindtap="switchTab">
    <image src="{{selected === 1 ? list[1].selectedIconPath : list[1].iconPath}}"></image>
    <view>{{list[1].text}}</view>
    <view class="new">NEW</view>
  </view>
  <view class="tab-bar-item" data-path="{{list[2].pagePath}}" data-index="{{2}}" bindtap="switchTab">
    <image src="{{selected === 2 ? list[2].selectedIconPath : list[2].iconPath}}"></image>
    <view>{{list[2].text}}</view>

  </view>
</view>