/* component/workContent/workContent.wxss */
.content {
  height: 60px;
  padding-left: 65px;
  padding-bottom: 14px;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-evenly;
  margin-bottom: 10px;
  position: relative;
}
.content::before {
  content:"";
  position: absolute;
  bottom: 0px;
  left: 30px;
  width: 100%;
  height: 0.5px;
  background-color: rgb(182, 182, 182);
}
.content image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  position: absolute;
  left: 0px;
}

.content view {
  width: 100%;

}

.content .news {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.content .news text {
  color: rgb(134, 134, 134);
}

.content .news text:nth-child(1) {
  font-size: 14px;
  display: inline-block;
  max-width: calc(100% - 40px);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content .news text:nth-child(2) {
  font-size: 12px;

}